<script>
    const orderId = document.getElementById('cancelOrderUser').value;
    const cancelOrderUserBtn = document.getElementById('cancelOrderUser');
    cancelOrderUserBtn.addEventListener('click',() => {

        fetch('/orderCancel', {
            method: "POST",
            headers: {
                "Content-Type": "application/json"
            },
            body: JSON.stringify({
                "orderId": orderId
            })})
            .then(() => {
                  window.location.href = '/orderDetailsUser/' + orderId;
                 })
        })


                        function openModal() {
                                            var modal = document.getElementById("my_modal_1");
                                            modal.showModal();
                                        }
                
                        function closeModal() {
                            var modal = document.getElementById("my_modal_1");
                            modal.close();
                        };

           const returnOrder = (orderId) => {
           const reason = document.getElementById('reason').value;
              fetch('/returnOrder',{
              method:"POST",
              headers:{
                  "Content-Type" : "application/json"
              },
              body:JSON.stringify({
                  orderId : orderId,
                  reason: reason
              })
          }) 
      };


    //------------ downlaod Invoice ---------------//

    const downloadInvoice = document.getElementById('downloadInvoice');

    downloadInvoice.addEventListener('click',() => {
        alert('Dowload the invoice')
    }) 
</script>

