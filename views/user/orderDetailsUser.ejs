                <div class="w-full max-w-sm md:max-w-3xl xl:max-w-sm flex items-start flex-col gap-8 max-xl:mx-auto">
                    <div class="p-6 border border-gray-200 rounded-3xl w-full group transition-all duration-500 hover:border-gray-400 ">
                        <h2
                            class="font-manrope font-bold text-3xl leading-10 text-black pb-6 border-b border-gray-200 ">
                            Order Summary
                        </h2>
                        <div class="data py-6 border-b border-gray-200">
                            <div class="flex items-center justify-between gap-4 mb-5">
                                <p class="font-normal text-lg leading-8 text-gray-400 transition-all duration-500 group-hover:text-gray-700">
                                    Order Id</p>
                                    <% const ORDID = parseInt(Math.random() * 2342332320); %>
                                    <div class="text-left"> <%= ORDID %> </div>
                            </div>
                            <div class="flex items-center justify-between gap-4 mb-5">
                                <p class="font-normal text-lg leading-8 text-gray-400 transition-all duration-500 group-hover:text-gray-700">
                                    Address</p>
                                <p class="text-xs leading-8 text-gray-900"><%= address.address %>, <%= address.city %> <br> <%= address.state %> ,<%= address.country %> </p>
                            </div>
                            <div class="flex items-center justify-between gap-4 mb-5">
                                <p class="font-normal text-lg leading-8 text-gray-400 transition-all duration-500 group-hover:text-gray-700">
                                    Payment Method</p>
                                <p class="font-medium text-xs leading-8 text-gray-600"> <%= order.paymentMethod %> </p>
                            </div>
                            <div class="flex items-center justify-between gap-4 mb-5">
                                <p class="font-normal text-lg leading-8 text-gray-400 transition-all duration-500 group-hover:text-gray-700">
                                    Discount Price</p>
                                <p class="font-medium text-xs leading-8 text-gray-600"> <%= order.discountPrice %>₹ </p>
                            </div>
                            <div class="flex items-center justify-between gap-4 mb-5">
                                <p class="font-normal text-lg leading-8 text-gray-400 transition-all duration-500 group-hover:text-gray-700">
                                    Order Status</p>
                                <p class="font-medium text-xs leading-8 text-gray-600"> <%= order.status %> </p>
                            </div>
                        </div>
                        <% if(order.status == "Cancelled") {%>
                        <div class="total flex items-center justify-between pt-6">
                            <button class="font-normal text-xl leading-8 text-black">Cancelled</button>
                        </div>
                        <% }else{ %>
          
                        <button  id="cancelOrderUser" value="<%= order.id %>" class="align-middle select-none font-sans font-bold text-center uppercase transition-all disabled:opacity-50 disabled:shadow-none disabled:pointer-events-none text-xs py-3 px-6 rounded-lg bg-red-500 text-white shadow-md shadow-gray-900/10 hover:shadow-lg hover:shadow-gray-900/20 focus:opacity-[0.85] focus:shadow-none active:opacity-[0.85] active:shadow-none" type="button">
                        Cancel
                       </button>
                        <% } %>
                        <% if(order.status == "Delivered") {%>  
                            <button class="align-middle select-none font-sans font-bold text-center uppercase transition-all disabled:opacity-50 disabled:shadow-none disabled:pointer-events-none text-xs py-3 px-6 rounded-lg bg-sky-500 text-white shadow-md shadow-gray-900/10 hover:shadow-lg hover:shadow-gray-900/20 focus:opacity-[0.85] focus:shadow-none active:opacity-[0.85] active:shadow-none" type="button" onclick="openModal()">
                                Return
                                </button>
                        <% } %>
                        <section>
                            <button id="downloadInvoice" class="mt-5 align-middle select-none font-sans font-bold text-center uppercase transition-all disabled:opacity-50 disabled:shadow-none disabled:pointer-events-none text-xs py-3 px-6 rounded-lg bg-white border-gray-800 border text-gray-900 shadow-md shadow-gray-900/10 hover:shadow-lg hover:shadow-gray-900/20 focus:opacity-[0.85] focus:shadow-none active:opacity-[0.85] active:shadow-none" type="button">
                                Dowload Invoice
                               </button>
                        </section>
                    </div>
                    
                </div>

                
