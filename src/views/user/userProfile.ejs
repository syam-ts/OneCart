<%- include('../partials/header') %>

<link rel="stylesheet" href="https://demos.creative-tim.com/notus-js/assets/vendor/@fortawesome/fontawesome-free/css/all.min.css">

<main class="flex justify-between">
<section class="justify-start">
    <%- include('../partials/userProfileSidebar') %>
</section>

<section class="mt-28 pt-52">

   

  <section class="h-500-px">
    <div class=" top-0 w-full h-full bg-center bg-cover bg-white shadow-xl">
      <span id="blackOverlay" class="w-full h-full  opacity-50 "></span>
    </div>
    <div class="top-auto bottom-0 left-0 right-0 w-full  pointer-events-none overflow-hidde h-70-px" style="transform: translateZ(0px)">
     
        <polygon class="text-blueGray-200 fill-current" points="2560 0 2560 100 0 100"></polygon>
      </svg>
    </div>
  </section>
  <section class=" py-16 bg-blueGray-200">
    <div class="container mx-auto px-4">
      <div class="relative flex flex-col min-w-0 break-words bg-white w-full mb-6 shadow-xl rounded-lg -mt-64">
        <div class="px-6">
          <div class="flex flex-wrap justify-end">
            <div class="w-full lg:w-3/12 px-4 lg:order-2 flex justify-center">
              <div class="relative">
                <img alt="User Image" src="/product_images/<%= user.userImage %>" class="shadow-xl rounded-full h-auto align-middle border-none  -m-16 -ml-20 lg:-ml-16 max-w-150-px">
              </div>
            </div>
            <div class="w-full lg:w-4/12 px-4 lg:order-3 lg:text-right lg:self-center">
              <div class="py-6 px-3 mt-32 sm:mt-0">
         
              </div>
            </div>
            
          </div>


          <div class="text-center mt-12">
            <% if (Array.isArray(address) && address.length > 0) { %>
              <h3 class="text-4xl font-semibold leading-normal mb-2 text-blueGray-700 pt-12">
                <%= address[0].name %>
              </h3>
              <div class="text-sm leading-normal mt-0 mb-2 text-blueGray-400 font-bold uppercase">
                <i class="fas fa-map-marker-alt mr-2 text-lg text-blueGray-400"></i>
                <%= address[0].state %> <%= address[0].country %>
              </div>
            <% } else { %>
              <h3 class="text-4xl font-semibold leading-normal mb-2 text-blueGray-700 pt-12">
                No location data available
              </h3>
            <% } %>
            <div class="mb-2 text-blueGray-600 mt-10">
              <i class="fas fa-briefcase mr-2 text-lg text-blueGray-400"></i>Gender - <%= user.gender %>
            </div>
            <div class="mb-2 text-blueGray-600 mt-10">
              <i class="fas fa-briefcase mr-2 text-lg text-blueGray-400"></i>Email  - <%= user.email %>
            </div>
            <div class="mb-2 text-blueGray-600">
              <i class="fas fa-university mr-2 text-lg text-blueGray-400"></i>Phone -  <%= user.phone %> 
            </div>

            <div class="mb-2 text-blueGray-600 justify-center">
              <a class="flex-col grid-cols-2 text-white border-2 border-gray-300 hover:text-red-500 font-mono bg-gray-900 rounded-md px-4 py-1 transition duration-300 ease-in-out transform hover:scale-105" href="/userEdit">Edit</a>
          </div>
          
               <% if(wallet[0] > 0){ %>
               <div class="mb-2 text-blueGray-600">
                <i class="fas fa-university mr-2 text-lg text-blueGray-400"></i>Wallet Balance :  <%= wallet[0].amount  %>
              </div>
       <% } %>
          </div>
          <div class="mt-10 py-10 border-t border-blueGray-200 text-center">
            <div class="flex flex-wrap justify-center">
              <div class="w-full lg:w-9/12 px-4">
                <p class="mb-4 text-lg leading-relaxed text-blueGray-700">
                    At OneCart, we're dedicated to bringing you Mr.<%= user.name %> the latest trends in
                     clothing, watches, and footwear, all in one convenient place. Whether you're looking
                      to upgrade your wardrobe with stylish outfits, accessorize with fashionable watches,
                     or find the perfect pair of shoes to complete your look, we've got you covered.
                </p>
                <a href="#pablo" class="font-normal text-pink-500">Danke</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </section>

  </section>



</main>


<%- include('../partials/footer') %>