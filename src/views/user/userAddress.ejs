<%- include('../partials/header') %>

<main class="flex justify-start">
    <section class="justify-start">
        <%- include('../partials/userProfileSidebar') %>
    </section>
    <!------------ new address -------------->
    <section class="w-64 mt-5">
          <a href="/addAddress" type="button" class="relative px-8 py-2 w-32 h-8 ml-4 overflow-hidden font-semibold rounded dark:bg-gray-800 dark:text-gray-50">
            Add New
            <span class="absolute top-0 right-0 px-5 py-0 text-xs tracking-wider text-center uppercase whitespace-no-wrap origin-bottom-left transform rotate-45 -translate-y-full translate-x-1/3 dark:bg-violet-600">New</span>
        </a>
    </section>

    <!------------ address -------------->
    <section>
         <% address.forEach( add => { %>
         <div class="relative flex flex-col mt-6 text-gray-700 bg-white shadow-md bg-clip-border rounded-xl w-96">
          <div class="p-6">
              <h5 class="block mb-2 font-sans text-xl antialiased font-semibold leading-snug tracking-normal text-blue-gray-900">
           <%= add.name %>
              </h5>
              <p class="block font-sans text-base antialiased font-light leading-relaxed text-inherit">
           <%= add.mobile %>
              </p>
              <p class="block font-sans text-base antialiased font-light leading-relaxed text-inherit">
           <%= add.address %> ,
              <%= add.pincode %> ,
              </p>
              <p class="block font-sans text-base antialiased font-light leading-relaxed text-inherit">
           <%= add.city %> ,
           <%= add.state %> ,
           <%= add.country %> ,
              </p>
          </div>
          <div class="p-6 pt-0">
        
         
             <p class="block font-sans text-base antialiased font-light leading-relaxed text-inherit">
                <a href="/editAddress/<%= add.id %>" class="align-middle select-none font-sans font-bold text-center uppercase transition-all disabled:opacity-50 disabled:shadow-none disabled:pointer-events-none text-xs py-1 px-4 rounded-lg bg-violet-900 text-white shadow-md shadow-gray-900/10 hover:shadow-lg hover:shadow-gray-900/20 focus:opacity-[0.85] focus:shadow-none active:opacity-[0.85] active:shadow-none">
                    Edit Address
                      </a>
                      </p>
                         <a href="/deleteAddress/<%= add.id %>" class="">
                    <svg xmlns="http://www.w3.org/2000/svg"  class="w-4 h-4 hover:text-blue-500" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                      </svg>
                  </a>
      
    </div>
             </div>
             <% }) %>
            </section>
    
 
  
</main>
<script>
    function parseQueryParams() {
        var queryParams = {};
        var queryString = window.location.search.substring(1);
        var params = queryString.split("&");
        for (var i = 0; i < params.length; i++) {
            var pair = params[i].split("=");
            queryParams[decodeURIComponent(pair[0])] = decodeURIComponent(pair[1]);
        }
        return queryParams;
    }

    document.addEventListener('DOMContentLoaded', function() {
        var queryParams = parseQueryParams();
        var message = queryParams['message'];
        var type = queryParams['type'];
        if (message) {
            if (type === 'success') {
                toastr.success(message);
            } else if (type === 'error') {
                toastr.error(message);
            }
        }
    });
</script>



